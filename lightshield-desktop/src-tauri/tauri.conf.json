{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "LightShield Desktop",
    "version": "0.1.0",
    "identifier": "com.lightshield.desktop",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "LightShield Desktop",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.ico",
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/256x256.png"
        ]
    }
}
